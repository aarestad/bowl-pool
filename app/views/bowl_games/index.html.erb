<p id="notice"><%= notice %></p>

<h1>Bowl Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bowl_games.each do |bowl_game| %>
      <tr>
        <td><%= bowl_game.name %></td>
        <td><%= link_to 'Show', bowl_game %></td>
        <td><%= link_to 'Edit', edit_bowl_game_path(bowl_game) %></td>
        <td><%= link_to 'Destroy', bowl_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

